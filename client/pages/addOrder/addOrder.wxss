page {
  background: #eee;
}

.item {
  margin-bottom: 20rpx;
  background: #fff;
  padding: 20rpx;
}

.item .header {
  font-size: 36rpx;
  color: #333;
  line-height: 72rpx;
}

.item .header text {
  margin-right: 40rpx;
}

.item .summary {
  color: #999;
  font-size: 28rpx;
  line-height: 60rpx;
}

.item .footer {
  font-size: 30rpx;
  color: #999;
  padding-left: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/*设为默认地址*/

.set-default {
  display: flex;
  align-items: center;
}

.set-default text {
  margin-left: 10rpx;
}

/*编辑与删除操作*/

.item .footer .operation {
  width: 280rpx;
  display: flex;
}

.item .footer .operation .container {
  display: flex;
  align-items: center;
  flex-direction: row;
}

.item .footer .operation .container image {
  width: 60rpx;
  height: 60rpx;
}

.item .footer .operation .container text {
  margin-left: 10rpx;
}

/*地址列表包装容器*/

.address-list {
  margin-bottom: 100rpx;
  border-bottom: 1rpx solid #ececec;
}

/*添加地址按钮*/

.address-add {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.line-titles {
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.order-inf {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.inf-row {
  display: flex;
  flex-direction: row;
  background-color: white;
  width: 100%;
  padding: 15rpx;
  align-items: center;
}

.row-text {
  width: 20%;
  font-size: 30rpx;
  text-align: left;
  line-height: 60rpx;
}

.row-input {
  width: 80%;
  font-size: 30rpx;
  line-height: 60rpx;
}

.cont {
  width: 100%;
  background: #fff;
}

.title {
  font-size: 18px;
  color: #333;
  line-height: 20px;
  margin: 0;
  max-height: 40px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 5% 5% 0 5%;
  font-weight: 700;
}

.gmxx {
  padding: 1% 5% 5% 5%;
  line-height: 25px;
}

.font-buju {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.xxbuju {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.font-kucun {
  color: #ccc;
  font-size: 18px;
  width: 50%;
  padding: 10px;
}

.jiage {
  font-size: 18px;
  color: #dd2727;
  padding: 10px;
  width: 50%;
}

.font_brand {
  color: black;
  font-size: 28rpx;
  flex: 1;
}

.goods-detail-title {
  background-color: #fff;
}

.goods-status {
  display: flex;
  flex-direction: row;
  width: 100%;
  color: black;
  font-size: 35rpx;
  background: white;
  border-bottom: 1rpx solid #ececec;
  padding: 10rpx;
}

.goodsStatus1 {
  flex-direction: column;
  width: 50%;
  text-align: left;
  margin-left: 10rpx;
}

.goodsStatus2 {
  flex-direction: column;
  width: 50%;
  text-align: right;
  margin-right: 40rpx;
}
