@import "/pages/template/goodsList/goodsList.wxss";
.container {
  background-color: #f2f2f2;
}

.header {
  display: -webkit-flex;
  padding: 15rpx;
  background: #008841;
  align-items: center;
}

/*放大镜图标*/

.header .icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
  float: left;
  margin: 1rpx 5rpx 0 0;
}

/*放大镜 文本框*/

.header .search {
  color: #000;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 10rpx;
  border-radius: 20rpx;
  background: #eee;
  align-items: center;
}

/*搜索按钮*/
.header button {
  margin-left: 20rpx;
  font-size: 30rpx;
}

/*文本框*/
.header input {
  width: 60vw;
  height: 35rpx;
  min-height: 40rpx;
}

.swiper_box {
  width: 100%;
  height: 350rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
}

view.text {
  display: flex;
  align-items: center;
  position: relative;
  padding: 10px 10px 10px 12px;
  font-size: 15px;
  color: #656565;
}

view.text:before {
  position: absolute;
  display: block;
  content: '';
  left: -5px;
  width: 2px;
  height: 100%;
  background-color: #09bb07;
}

.line_flag {
  width: 3px;
  height: 15px;
  display: inline-block;
  background-color: #ff0;
}

view.text text {
  margin-left: 10px;
  line-height: 18px;
  font-weight: bold;
}

.venues_box {
  padding: 0 10rpx;
}

.venues_item {
  display: inline-block;
  width: 49%;
  margin: 0 0.5%;
}

.venues_item image {
  width: 100%;
  height: 90px;
}

/*导航界面*/

.navs {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}

.nav-item .nav-image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.nav-item text {
  padding-top: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
}
